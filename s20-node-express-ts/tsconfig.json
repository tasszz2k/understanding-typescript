{
  "compilerOptions": {
    "target": "es2024",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "lib": [
      "es2024",
      "dom"
    ],

    // nodeJS
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "verbatimModuleSyntax": true,

    "erasableSyntaxOnly": true,
  }
}
